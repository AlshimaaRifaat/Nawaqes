<?xml version="1.0" encoding="utf-8"?><!--<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"--><!--android:layout_width="match_parent"--><!--android:layout_height="wrap_content"--><!--android:orientation="horizontal"--><!--android:padding="2dp"--><!--android:gravity="center"--><!--android:layout_gravity="center|top">-->
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/radioGroup1"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="4dp"
    android:background="#fff"
    android:orientation="horizontal"
    android:padding="3dp">

    <RadioButton
        android:id="@+id/radio"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:theme="@style/RadioButtonTheme" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_discount_on_payment" />

    <TextView
        android:id="@+id/text"
        android:paddingStart="@dimen/_1sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|start" />

</RadioGroup>