<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ibsvalleyn.outlet.fragments.Sign_UP_Fragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent"
                      android:id="@+id/conainer"
                      android:background="@color/colorPrimary"
                      android:layout_height="150dp">

            <ImageView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:src="@drawable/logo_white"
                    android:layout_height="wrap_content"/>

        </LinearLayout>


        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

            <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:background="@null"
                    android:drawableStart="@drawable/selector_user"
                    android:drawablePadding="8dp"
                    android:gravity="center|start"
                    android:hint="First Name"
                    android:paddingEnd="8dp"
                    android:textColorHint="#BEC0BEBE"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="6dp"
                    android:background="#BEC0BEBE"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content">

            <EditText android:id="@+id/last_name"
                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:layout_gravity="center"
                      android:layout_marginStart="6dp"
                      android:background="@null"
                      android:drawableStart="@drawable/selector_user"
                      android:drawablePadding="8dp"
                      android:gravity="center|start"
                      android:hint="Last Name"
                      android:paddingEnd="8dp"
                      android:textColorHint="#BEC0BEBE"
            />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="6dp"
                    android:background="#BEC0BEBE"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content">

            <EditText android:id="@+id/email"
                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:layout_gravity="center"
                      android:layout_marginStart="6dp"
                      android:background="@null"
                      android:drawableStart="@drawable/selector_email"
                      android:drawablePadding="8dp"
                      android:gravity="center|start"
                      android:hint="Email Address"
                      android:paddingEnd="8dp"
                      android:textColorHint="#BEC0BEBE"
            />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="6dp"
                    android:background="#BEC0BEBE"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content">

            <EditText android:id="@+id/phone"
                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:layout_gravity="center"
                      android:layout_marginStart="6dp"
                      android:background="@null"
                      android:drawableStart="@drawable/selector_mobile"
                      android:drawablePadding="8dp"
                      android:gravity="center|start"
                      android:inputType="number"
                      android:hint="Phone Number"
                      android:paddingEnd="8dp"
                      android:textColorHint="#BEC0BEBE"
            />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="6dp"
                    android:background="#BEC0BEBE"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content">

            <EditText android:id="@+id/password"
                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:layout_gravity="center"
                      android:layout_marginStart="6dp"
                      android:background="@null"
                      android:drawableStart="@drawable/selector_password"
                      android:drawablePadding="8dp"
                      android:inputType="textPassword"
                      android:gravity="center|start"
                      android:hint="Password"
                      android:paddingEnd="8dp"
                      android:textColorHint="#BEC0BEBE"
            />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="6dp"
                    android:background="#BEC0BEBE"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content">

            <EditText android:id="@+id/confirm_password"
                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:layout_gravity="center"
                      android:layout_marginStart="6dp"
                      android:background="@null"
                      android:drawableStart="@drawable/selector_password"
                      android:drawablePadding="8dp"
                      android:inputType="textPassword"
                      android:gravity="center|start"
                      android:hint="Confirm Password"
                      android:paddingEnd="8dp"
                      android:textColorHint="#BEC0BEBE"
            />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="6dp"
                    android:background="#BEC0BEBE"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
                android:background="@drawable/green_rounded_btn_bg"
                android:id="@+id/bt_login"
                android:layout_width="match_parent"
                android:layout_marginEnd="12dp"
                android:layout_gravity="center"
                android:layout_height="45dp"
                android:layout_marginTop="24dp"
                android:text="@string/sign_up"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:layout_marginStart="12dp"
        />
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:gravity="center"
                      android:layout_marginTop="12dp"
                      android:layout_marginBottom="12dp"
                      android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:textColor="@color/colorPrimary"
                      android:textSize="14sp"
                      android:gravity="center"
                      android:text="@string/You_agree_to_our"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:textColor="@color/colorPrimary"
                      android:textSize="14sp"
                      android:gravity="center"
                      android:text="@string/terms_and_conditions"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>